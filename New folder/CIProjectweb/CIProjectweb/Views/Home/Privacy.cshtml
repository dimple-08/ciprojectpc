    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_HeaderLayoutcshtml.cshtml";
}
@model List<CIProjectweb.Entities.DataModels.CmsPage>

<style>
    .content-section {
    display: none;
    }

    #content {
    padding: 20px;
    background-color: #fff;
    }

    #content .active {
    display: block;
    }

    .menu-link {
    display: block;
    padding: 5px 10px;
    text-decoration: none;
    font-size: 16px;
    color: #333;
    }

    .menu-link.active {
    background-color: #007bff;
    color: #fff;
    }
