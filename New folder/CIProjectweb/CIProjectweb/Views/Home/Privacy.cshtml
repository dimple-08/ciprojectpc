                        <p>@Html.Raw(@item.Description)</p>
                    </section>
                   
                    }
                    else{
                        <section id="@($"section-{GetSafeId(item.Title)}")"  class="content-section " style="width: 95%;">
                        <h2>@item.Title</h2>
                        <p>@Html.Raw(@item.Description)</p>
                    </section>
                    }
                       
                    }
                   
                     
                     d++;
                }
