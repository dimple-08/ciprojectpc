  <script>
     var loader = document.getElementById('preloader');
document.addEventListener("DOMContentLoaded", function () {
    setTimeout(function() {
        loader.style.display = "none";
    }, 5000);
});
window.addEventListener("load", function () {
    loader.style.display = "none";
});

          function loadBanner() {
            $.ajax({
                url: '/Home/LoadBanner',
                type: 'POST',
                dataType: 'json',
                success: async function (result) {
                    console.log(result.data["banners"])
                    if (result.data != null) {
                        var banner = "";
                        var btn = "";
                        var carIndecator = document.getElementById("carousel-indicators");

                        var displayBanner = document.getElementById("display-banner");

                        for (let i = 0; i < result.data["banners"].length; i++) {
                            if (i == 0) {
                                var banner = `


                                <div class="item active">
                            <img src="${result.data["banners"][i].image}"
                                 style="width:100%">
                            
                            <div class="carousel-caption container-fluid">
                                <h3 id="imginfo">Sed ut perspiciatis unde omnis iste natus voluptatem.</h3>
                                <p id="imginfosmall">${result.data["banners"][i].text}</p>
                            </div>
                        </div>`;
                        }
                        else{
                                banner = ` 
                                
                                
                                
                                
                                  <div class="item">
                            <img src="${result.data["banners"][i].image}" 
                                style="width:100%">
                            <div class="carousel-caption container-fluid">
                                <h3 id="imginfo">Sed ut perspiciatis unde omnis iste natus voluptatem.</h3>
                                <p id="imginfosmall">${result.data["banners"][i].text}</p>
                            </div>
                        </div>`;
                        
                                  btn = `<li data-target="#myCarousel" data-slide-to="${i}"></li>
                                             `;
                                            }
                            carIndecator.innerHTML += btn;
                            displayBanner.innerHTML += banner;

                        }
                    }
                }
            });

        }

   </script>
