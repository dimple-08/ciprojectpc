             <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
              <button class="btn" id="myBtn" data-bs-toggle="modal" >
                Contact us
            </button>


            <!-- Modal content -->
            <div id="myModal" class="modal">
                <div class="modal-content" style="height:61%;">
                    <div class="modal-header" style="background-color: white; color: black;">
                        <h2>Change Password</h2>
                        <span class="close" style="color:black;">&times;</span>

                    </div>
                    
                        <div class="modal-body">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" placeholder="Enter your name" id="name" />

                            <label for="email" class="">Email Address</label>
                            <input type="email" class="form-control" placeholder="Enter your mail" id="email" />

                            <label for="subject" >Subject</label>
                            <input type="text" class="form-control" placeholder="Enter your subject" id="subject" />

                            <label for="message" >Message</label>
                            <textarea class="form-control" id="message"></textarea>
                        </div>
                


                    <div class="modal-footer" style="background-color: white; color: black;">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="contactUs()">Send</button>
                    </div>

                </div>

            </div>
        </div>
    </footer>
