@model CIProjectweb.Entities.ViewModels.ForgotPasswordViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Forgot Password Page";
    Layout = "~/Views/Shared/_noone.cshtml";

}
<body>
            <div class="col-sm-12 col-md-4 col-lg-4 " id="formContainer">
                <div id="form">
                    <div>
                    <form asp-route="ForgotPAasword" method="post">
                        <h3 style="text-align: center;
                        letter-spacing: 0px;
                        color: #414141;
                        opacity: 1;">Forgot Password</h3>
                        <div class="text-center">
                        <span>Enter your email address you've using for your account below and we will send you a password reset link</span>
                        </div>
                        <br>
                        <br>
                        <span id="Textinput_">Email Address</span>
                        <br>
                        <input class="red-input" asp-for="Email" type="text">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <br>
                        <br>
                        <div id="loginbtndiv">
                            <button id="btnlogin" type="submit">Reset my Password</button>
                            <br>
                            <a id="passwordlink" asp-controller="Home" asp-action="Login">Login</a>
                            <br>
                        </div>
                        </form>
                    </div>
                        <a id="policylink">Privacy Policy</a>
                  
                </div>
            </div>

   
    <script>
        function openWin() {
          window.open("CIResetPassword.html");
        }
        </script>
        @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</body>


