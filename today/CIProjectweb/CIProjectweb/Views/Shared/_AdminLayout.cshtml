<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <title>Admin Dashboard</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" style="background-color: #F88634;">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase">Navigation</div>
            <div class="list-group list-group-flush my-3">
                <a id="User" asp-area="Admin" asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action second-text @(ViewBag.nav == 1? "active":"bg-transparent")">
                    <i class="bi bi-person-fill me-2"></i>User
                </a>
                <a   asp-area="Admin" asp-controller="Admin" asp-action="CMS" class="list-group-item list-group-item-action  @(ViewBag.nav == 3? "active":"bg-transparent") second-text">
                    <i class="bi bi-file-earmark-text-fill me-2"></i>CMS Page
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Mission" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 2? "active":"bg-transparent")">
                    <i class="bi bi-bullseye me-2"></i>Mission
                </a>
                <a href="#theme" class="list-group-item list-group-item-action  bg-transparent second-text">
                    <i class="bi bi-grid-1x2-fill me-2"></i>Mission Theme
                </a>
                <a href="#skill" class="list-group-item list-group-item-action  bg-transparent second-text">
                    <i class="bi bi-tools me-2"></i>Mission Skill
                </a>
                <a  asp-area="Admin" asp-controller="Admin" asp-action="Application" class="list-group-item list-group-item-action second-text @(ViewBag.nav == 6? "active":"bg-transparent")" >
                    <i class="bi bi-folder-fill me-2"></i>Mission Application
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Story" class="list-group-item list-group-item-action   @(ViewBag.nav == 7? "active":"bg-transparent") second-text">
                    <i class="bi bi-bookmark-star-fill me-2"></i>Story
                </a>
                <a href="#banner" class="list-group-item list-group-item-action  bg-transparent second-text ">
                    <i class="bi bi-book-fill me-2"></i>Banner Management
                </a>
            </div>
        </div>
         <div id="page-content-wrapper">
         <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-2 px-2" style=" box-shadow: 0 2px 4px 0 rgba(0,0,0,.2);">
                <div class="d-flex align-items-center">
                    <img src="~/images/menu-bar.svg" class="primary-text fs-4 me-3" alt="" id="menu-toggle">
                    <p class="m-0" id="dashboadtime"></p>
                </div>
                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/user-img-large.png" alt="" class="adminimg">
                                John Doe
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
         <main role="main">
        @RenderBody()
    </main>
    </div>
    </div>
  
    </body>
     
    <script src="~/js/AdminPartialRender.js"></script>
    @await Component.InvokeAsync("NToastNotify")
    </html>
    
      