<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CIProjectweb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
@*  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CIProjectweb.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom" style="height: 50px;">
            <div class="container-fluid d-flex flex-row justify-content-between">
                <div class="d-flex flex-row">
                    <button class="navbar-toggler ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="img-logo-mobile">
                        <img src="~/lib/images/logo.png" width="60px" height="20px" />
                    </div>
                </div>
                <div class=" row" id="mobilecontent">
                    <div class="d-flex ">

                        <div class="">
                            <button class="btn btn-search" type="button"><img src="~/lib/images/search.png"></button>
                            <img src="~/lib/images/bell.png" />
                            <img id="profileimg" src="~/lib/images/user-img.png">

                        </div>
                    </div>
                </div>
                <div class="offcanvas offcanvas-start" id="navbarSupportedContent">
                    @* <a href="javascript:void(0)" style="text-decoration:none;" onclick="closeNav()">clear All</a>
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>*@
                    <div class="offcanvas-header">
                        <h1 class="offcanvas-title" style="color:blue;">Clear All</h1>

                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                    </div>

                    <a class="nav-link text-dark font-color" asp-area="" asp-controller="Home" asp-action="storyListingPage">Stories</a>
                    <div class="dropdown dropright ">
                        <a class="nav-link text-dark font-color" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Policy
                            <i class="bi bi-chevron-right "></i>
                        </a>
                        <ul class="dropdown-menu">

                            <li><a class="dropdown-item dd-color" href="#">Another action</a></li>
                            <li><hr class="dropdown-divider dd-color"></li>
                            <li><a class="dropdown-item dd-color" href="#">Something else here</a></li>
                        </ul>
                    </div>
                </div>
                <div class="collapse navbar-collapse me-auto ms-auto" id="navbarSupportedContent1">
                    <ul class="navbar-nav flex-grow-1" style="margin-left:15%">

                        <li class="nav-item">
                            <a class="nav-link text-dark font-color" asp-area="" asp-controller="Home" asp-action="storyListingPage">Stories</a>
                        </li>
                        <li class="nav-item ms-4 dropdown">
                            <a class="nav-link text-dark font-color" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Policy
                                <img class="ic-down" src="~/images/drop-down.png">
                            </a>
                            <ul class="dropdown-menu">

                                <li><a class="dropdown-item dd-color" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider dd-color"></li>
                                <li><a class="dropdown-item dd-color" href="#">Something else here</a></li>
                            </ul>
                        </li>

                    </ul>
                    <div class="d-flex me-5  justify-content-end dropdown mx-5 my-auto">

                        @* <img id="profileimg" src="~/lib/images/user-img.png"><a class=" nav-link text-dark font-color " href="#" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false" font-family: Roboto;>@if(User.Identity.IsAuthenticated){<label asp-for="UsersList.FirstName">@Model.UsersList.FirstName</label>}  <img class="ic-down" src="~/lib/images/drop-down.png"></a>


                        <ul class="dropdown-menu">
                        @if(User.Identity.IsAuthenticated){<li><a class="dropdown-item dd-color" asp-action="LogOut" asp-controller="Home">Log Out</a></li>}
                        @if(!User.Identity.IsAuthenticated){<li><a class="dropdown-item dd-color" asp-action="Login" asp-controller="Home">Log In</a></li>}
                        <li><a class="dropdown-item dd-color" href="#">Action</a></li>
                        <li><a class="dropdown-item dd-color" href="#">Another </a></li>
                        <li><a class="dropdown-item dd-color" href="#">Something </a></li>
                        </ul>*@

                        @if (@Context.Session.GetString("UserName") != null)
                        {

                            <img id="profileimg" src="@Context.Session.GetString("Avtar")">

                            <a class=" nav-link text-dark font-color " href="#" role="button" data-bs-toggle="dropdown"
                                                                                aria-expanded="false" font-family: Roboto;><label> @Context.Session.GetString("UserName")</label>  <img class="ic-down" src="~/images/drop-down.png"></a>
                            <ul class="dropdown-menu ">
                                <li><a class="dropdown-item dd-color" href="#">Dashbord</a></li>
                                <li><a class="dropdown-item dd-color" href="#">My Account</a></li>
                                <li><a class="dropdown-item dd-color" href="#">Help Center</a></li>
                                <li><a class="dropdown-item dd-color" asp-action="LogOut" asp-controller="Home">Log out</a></li>
                            </ul>

                        }
                        else
                        {
                            <a asp-action="Login" asp-controller="Home" class="btn btn-outline-danger">Login</a>
                            <a asp-action="registration" asp-controller="Home" class="btn btn-outline-danger ms-3">Register</a>
                        }


                    </div>
                </div>
            </div>
        </nav>
        
       
    </header>
    
        <main role="main">
            @RenderBody()
        </main>
  

    <footer class=" footer text-muted">
        <div class="container" style="padding-top:23px;">
             <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
function openNav() {
  document.getElementById("navbarSupportedContent").style.display = "block";
  document.getElementById("searchnavmobile").style.display = "none";
  document.getElementById("navbarSupportedContent").style.marginLeft = "250px";
}
function openFilter() {
  document.getElementById("FilterSupportedContent").style.display = "block";
  document.getElementById("navbarSupportedContent").style.display = "none";
  document.getElementById("searchBar").style.display = "none";
  document.getElementById("FilterSupportedContent").style.marginLeft = "250px";
}

function closeNav() {
  document.getElementById("navbarSupportedContent").style.display = "none";
  document.getElementById("searchnavmobile").style.display = "block";
  document.getElementById("navbarSupportedContent").style.marginLeft = "250px";
}

function closeFilter() {
  document.getElementById("FilterSupportedContent").style.display = "none";
  document.getElementById("searchBar").style.display = "block";
  document.getElementById("FilterSupportedContent").style.marginLeft = "250px";
}




</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
