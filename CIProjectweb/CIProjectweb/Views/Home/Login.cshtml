@model CIProjectweb.Entities.ViewModels.LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_noone.cshtml";
}




<body>

            <div class="col-sm-12 col-md-4 col-lg-4 " id="formContainer">
                <div id="form">
                    <div>
                      <form asp-action="Login" >
                          @if (ViewBag.AlertMessage != null)
{
    <div class="alert alert-success">@ViewBag.AlertMessage</div>
}
                           <div class="mb-1">
                                <span id="Textinput_">Email Address</span>
                                <input type="email" class="form-control" id="Email" aria-describedby="emailHelp" asp-for="Email" placeholder="Enter email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="mb-1">
                                <span id="Textinput_">Password</span>
                                <input type="password" class="form-control" id="Password" placeholder="Password" asp-for="Password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        <br>
                        <br />
                        <div id="loginbtndiv">
                            <button id="btnlogin" type="submit">Login</button>
                            <br>
                            <a id="passwordlink" asp-controller="Home" asp-action="ForgotPAasword">Lost Your Passwpord?</a>
                            <br>
                            <span id="registrationinfo">Don't Have an account? <a asp-controller="Home" asp-action="registration">Create an account</a></span>
                            <br>
                        </div>
                        </form>
                    </div>
                        <a id="policylink" >Privacy Policy</a>
                    <div class="Stars" style="--rating: 3.5;" aria-label="Rating of this product is 2.3 out of 5.">
                </div>
            </div>

       
<script type="text/javascript">
  
</script>

</body>

