@model CIProjectweb.Entities.ViewModels.ResetPAsswordViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Reset Password Page";
    Layout = "~/Views/Shared/_noone.cshtml";
}
<body>
          

            <div class="col-sm-12 col-md-4 col-lg-4 " id="formContainer">
               
                <div id="form">
                     <h4>@ViewBag.Message</h4>
                    <div>
                    <form asp-route="ResetPAssword" method="post">
                        <h3 style="text-align: center;
                        letter-spacing: 0px;
                        color: #414141;
                        opacity: 1;">New Password</h3>
                        
                        <div class="text-center">
                        <span>Please enter a new password in the fields below.</span>
                        </div>
                        <input class="red-input" asp-for="Token" hidden >
                        <br>
                        <br>
                       
                        <input class="red-input" asp-for="Email" hidden>
                        <span asp-validation-for="Email"></span>
                        <br>
                        <span id="Textinput_">New Password</span>
                        <br>
                        <input class="red-input" asp-for="Password" type="password">
                        <span asp-validation-for="Password"></span>
                        <br>
                        <br>
                        <span id="Textinput_">Confirm Password
                        </span>
                        <br>  
                        <input class="red-input" asp-for="ConfirmPassword" type="password">
                        <span asp-validation-for="ConfirmPassword"></span>
                        <br>
                        <br>
                        <div id="loginbtndiv">
                            <button id="btnlogin" type="submit">Change Password</button>
                            <br>
                            <a id="passwordlink" asp-controller="Home" asp-action="Login">Login</a>
                            <br>
                        </div>
                        </form>
                    </div>
                        <a id="policylink">Privacy Policy</a>
                    
                </div>
            </div>

    

</body>

